# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/auth/spotify/callback

# Application Configuration
# Generate a secure random string for production (e.g., using: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your_secret_key_here_change_in_production

# URLs
# Backend URL (where the FastAPI server runs)
BACKEND_URL=http://localhost:8000
# Frontend URL (for OAuth redirects and CORS)
FRONTEND_URL=http://localhost:3000

# Environment
# Options: development, production
ENVIRONMENT=development

